// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  PARTNER_1
  PARTNER_2
}

enum CoupleStatus {
  ACTIVE // Full collaboration
  SEPARATED // Read-only or private access to past memories
  SOLO // Partner 1 is alone, partner 2 is gone/removed
}

enum MediaType {
  IMAGE
  VIDEO
  PDF
}

model Category {
  id        String   @id @default(uuid())
  name      String
  isSystem  Boolean  @default(false)
  createdAt DateTime @default(now())

  coupleId String
  couple   Couple @relation(fields: [coupleId], references: [id], onDelete: Cascade)

  posts Post[]

  @@unique([coupleId, name])
  @@index([coupleId])
  @@map("categories")
}

model Couple {
  id        String       @id @default(uuid())
  status    CoupleStatus @default(ACTIVE) //incase of couple separations
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  users      User[]
  posts      Post[]
  categories Category[]

  @@map("couples")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique // Required for login and security
  name      String? // User's display name
  password  String? // Optional to support Google/Social login
  image     String? // For profile pictures (e.g., from Google)
  role      UserRole?
  coupleId  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  couple Couple? @relation(fields: [coupleId], references: [id], onDelete: SetNull)
  posts  Post[]  @relation("UserPosts")

  // New: Track invites sent by this user
  sentInvites     Invitation[] @relation("SentInvites")
  receivedInvites Invitation[] @relation("ReceivedInvites")

  @@unique([coupleId, role])
  @@index([coupleId])
  @@map("users")
}

// Incorprating plans into posts themselves, with levels of priority
enum Priority {
  LOW
  MEDIUM
  HIGH
}

// Comprehensive list of plan types for a couple's life
enum PlanType {
  ROMANCE // Dates, anniversaries, surprises
  MAINTENANCE // Bills, chores, car service, house stuff
  SOCIAL // Family events, friends' weddings, outings
  HEALTH // Doctor appointments, gym sessions
  FINANCE // Savings goals, big purchase planning
  KIDS // School events, pediatrician, playdates
  TRAVEL // Vacations, weekend getaways
  CAREER // Important meetings, work trips
  OTHER
}

model Post {
  id        String    @id @default(uuid())
  title     String
  content   String?   @db.Text
  eventAt   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // PLANNING & ORGANIZATION
  priority    Priority @default(MEDIUM)
  planType    PlanType @default(ROMANCE) // New field
  isCompleted Boolean  @default(false)

  coupleId    String
  createdById String
  categoryId  String

  couple    Couple   @relation(fields: [coupleId], references: [id], onDelete: Cascade)
  createdBy User     @relation("UserPosts", fields: [createdById], references: [id], onDelete: Cascade)
  category  Category @relation(fields: [categoryId], references: [id])

  media Media[]

  @@index([createdById]) // adding indexing incase user needs to see their posted-content.
  @@index([categoryId])
  @@index([planType]) // Indexed for fast calendar filtering
  @@index([coupleId, eventAt])
  @@map("posts")
}

model Media {
  id            String    @id @default(uuid())
  type          MediaType
  url           String    @db.Text
  name          String
  size          Int?
  mimeType      String?
  mediaPosition Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, mediaPosition])
  @@index([postId])
  @@index([type])
  @@map("media")
}

// New model to handle the "Connect to partner" flow
model Invitation {
  id       String @id @default(uuid())
  senderId String
  sender   User   @relation("SentInvites", fields: [senderId], references: [id])

  receiverEmail String // The email they typed in the "Connect" box
  receiverId    String? // Optional: if the partner already has a solo account
  receiver      User?   @relation("ReceivedInvites", fields: [receiverId], references: [id])

  status    InvitationStatus @default(PENDING)
  createdAt DateTime         @default(now())

  @@index([receiverEmail])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}
